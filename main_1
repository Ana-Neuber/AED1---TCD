#include <stdio.h>
#include <stdlib.h>

int main ( )
{
    int menu_principal, menu_cliente, menu_pesquisa;

    while (1)
    {
        //menu principal (boas vindas)
        printf ("\n\nBEM-VINDO A SAKAMANA\n\n");
        printf ("\n(1) Cliente");
        printf ("\n(2) Restaurante");
        printf ("\n\n(0) Sair");

        do
        {
            printf ("\nOpcao escolhida: ");
            
            scanf ("%d", &menu_principal);

            if ((menu_principal < 0) || (menu_principal > 2))
                printf ("\nOpcao invalida, tente novamente.");

        } while ((menu_principal < 0) || (menu_principal > 2));

        if (menu_principal == 0)
        {
            printf ("\nEncerrando o programa...\n");
            break;
        }

        switch (menu_principal)
        {
            case 1: //cliente
                while (1)
                {
                    //menu do cliente
                    printf ("\n\nMENU CLIENTE\n\n");
                    printf ("\n(1) Cadastro");
                    printf ("\n(2) Pesquisar");
                    printf ("\n(3) Carrinho");
                    printf ("\n(4) Meus pedidos");
                    printf ("\n\n(0) Voltar ao menu principal");

                    do
                    {
                        printf ("\nOpcao escolhida: ");
                        scanf ("%d", &menu_cliente);

                        if ((menu_cliente < 0) || (menu_cliente > 4))
                            printf ("\nOpcao invalida, tente novamente.");
                    } while ((menu_cliente < 0) || (menu_cliente > 4));

                    if (menu_principal == 0)
                        break;

                    switch (menu_cliente)
                    {
                        case 1: //cadastro do cliente
                            printf ("\n\nCADASTRO DO CLIENTE\n\n");
                            printf ("\nDigite seu nome: ");
                            printf ("\nDigite seu CPF: ");
                            printf ("\nDigite seu e-mail: ");
                            printf ("\nDigite sua senha: ");

                            break;

                        case 2: //pesquisar
                            while (1)
                            {
                                printf ("\n\nPESQUISAR\n\n");
                                printf ("\n(1) Por nome");
                                printf ("\n(2) Por filtro");
                                printf ("\n\n(0) Voltar ao menu do cliente");

                                do
                                {
                                    printf ("\nOpcao escolhida: ");
                                    scanf ("%d", &menu_pesquisa);

                                    if ((menu_pesquisa < 0) || (menu_pesquisa > 2))
                                        printf ("\nOpcao invalida, tente novamente.");
                                } while ((menu_pesquisa < 0) || (menu_pesquisa > 2));

                                if (menu_pesquisa == 0)
                                    break;

                                switch (menu_pesquisa)
                                {
                                    case 1:
                                        //
                                        break;

                                    case 2:
                                        //
                                        break;
                                }
                            }

                            break;

                        case 3: //carrinho
                            //
                            break;

                        case 4: //meus pedidos
                            //
                            break;
                    }
                }
                break;

            case 2: //restaurante
                //
                break;
        }
    }

    return 0;
}
